# Django settings
DJANGO_SECRET_KEY=replace-with-a-strong-secret-key
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=127.0.0.1,localhost
APP_TIMEZONE=UTC
DJANGO_LOG_FILE=django.log

# Security (effective when DJANGO_DEBUG=False)
# Set to True if your app is always behind HTTPS or the load balancer terminates TLS and sets X-Forwarded-Proto
SECURE_SSL_REDIRECT=True

